package b;
public class Avvio {

	public static void main(String[] args) {
		GestioneIO g = new GestioneIO();
		Calcolatrice c  = new Calcolatrice();
		String risposta;
		do {
			switch(g.leggiStringa("Selezionare quale operazione eseguire-->\n"
					+ "Addizione/Sottrazione/Moltiplicazione/Divisione/"
					+ "radice:").toLowerCase()) {
			case "addizione":
				double a = g.leggiDecimale("Inserisci un numero: ");
				double b = g.leggiDecimale("Inserisci il secondo numero: ");
				String tre = g.leggiStringa("Vuoi inserire un terzo numero? (Si/No)");
				if(tre.equalsIgnoreCase("si")) {
					double d = g.leggiDecimale("Inserisci il terzo numero: ");
					g.stampaM("Risultato: "+c.addizione(a, b, d));
				} else {
					g.stampaM("Risultato: "+c.addizione(a, b));
				}
				break;
			case "sottrazione":
				double e = g.leggiDecimale("Inserisci un numero: ");
				double f = g.leggiDecimale("Inserisci il secondo numero: ");
				String tre2 = g.leggiStringa("Vuoi inserire un terzo numero? (Si/No)");
				if(tre2.equalsIgnoreCase("si")) {
					double d = g.leggiDecimale("Inserisci il terzo numero: ");
					g.stampaM("Risultato: "+c.sottrazione(e, f, d));
				} else {
					g.stampaM("Risultato: "+c.sottrazione(e, f));
				}				
				break;
			case "moltiplicazione":
				double k = g.leggiDecimale("Inserisci un numero: ");
				double l = g.leggiDecimale("Inserisci il secondo numero: ");
				String tre3 = g.leggiStringa("Vuoi inserire un terzo numero? (Si/No)");
				if(tre3.equalsIgnoreCase("si")) {
					double m = g.leggiDecimale("Inserisci il terzo numero: ");
					g.stampaM("Risultato: "+c.moltiplicazione(k, l, m));
				} else {
					g.stampaM("Risultato: "+c.moltiplicazione(k, l));
				}	
				break;
			case "divisione":
				double n = g.leggiDecimale("Inserisci un numero: ");
				double v = g.leggiDecimale("Inserisci il secondo numero: ");
				String tre4 = g.leggiStringa("Vuoi inserire un terzo numero? (Si/No)");
				if(tre4.equalsIgnoreCase("si")) {
					double x = g.leggiDecimale("Inserisci il terzo numero: ");
					g.stampaM("Risultato: "+c.divisione(n, v, x));
				} else {
					g.stampaM("Risultato: "+c.divisione(n, v));
				}	
				break;
			case "radice":
				double p = g.leggiDecimale("Inserisci un numero: ");
				g.stampaM("Risultato: "+c.radiceQ(p));
				break;
			default:
				g.stampaErrore("Nessuna delle quattro operazioni ï¿½ stata selezionata.");
			}
			risposta = g.leggiStringa("Vuoi continuare? (Si/No)");
		} while(risposta.equalsIgnoreCase("si"));
		g.uscire();
	}

}
